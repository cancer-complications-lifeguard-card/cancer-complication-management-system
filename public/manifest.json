{
  "name": "癌症并发症智能管理系统",
  "short_name": "癌症管理",
  "description": "为癌症患者及家属提供全周期并发症管理支持的智能系统",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "zh-CN",
  "dir": "ltr",
  "categories": ["medical", "health", "utilities"],
  "shortcuts": [
    {
      "name": "急救小红卡",
      "short_name": "急救卡",
      "description": "快速访问紧急医疗信息",
      "url": "/dashboard/emergency",
      "icons": [
        {
          "src": "/icons/emergency-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "生命体征",
      "short_name": "监测",
      "description": "查看生命体征监测数据",
      "url": "/dashboard/monitoring",
      "icons": [
        {
          "src": "/icons/monitoring-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "智能分诊",
      "short_name": "分诊",
      "description": "症状分析和预警",
      "url": "/dashboard/triage",
      "icons": [
        {
          "src": "/icons/triage-96x96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
