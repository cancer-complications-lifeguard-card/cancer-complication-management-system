      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-home.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "首页 - 桌面版"
    },
    {
      "src": "/screenshots/mobile-emergency.png",
      "sizes": "390x844",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "急救小红卡 - 移动版"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [],
  "share_target": {
    "action": "/dashboard/emergency/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "medical-info",
          "accept": ["image/*", ".pdf"]
        }
      ]
    }
  },
  "protocol_handlers": [
    {
      "protocol": "tel",
      "url": "/dashboard/emergency/call?number=%s"
    }
  ],
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "minimal-ui",
    "browser"
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "file_handlers": [
    {
      "action": "/dashboard/health/import",
      "accept": {
        "application/pdf": [".pdf"],
        "image/*": [".jpg", ".jpeg", ".png", ".webp"]
      }
    }
  ]
}